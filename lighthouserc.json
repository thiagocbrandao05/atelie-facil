{
    "ci": {
        "collect": {
            "url": [
                "http://localhost:3000"
            ],
            "numberOfRuns": 3,
            "startServerCommand": "npm run start",
            "settings": {
                "preset": "desktop"
            }
        },
        "assert": {
            "preset": "lighthouse:recommended",
            "assertions": {
                "categories:performance": [
                    "error",
                    {
                        "minScore": 0.9
                    }
                ],
                "categories:accessibility": [
                    "error",
                    {
                        "minScore": 0.95
                    }
                ],
                "categories:best-practices": [
                    "error",
                    {
                        "minScore": 0.9
                    }
                ],
                "categories:seo": [
                    "error",
                    {
                        "minScore": 0.95
                    }
                ]
            }
        },
        "upload": {
            "target": "temporary-public-storage"
        }
    }
}